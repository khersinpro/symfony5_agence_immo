{% extends 'base.html.twig' %}

{% block title %}Gérer les biens{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gérer les options</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for option in options %}
                <tr>
                    <td>{{ option.name }}</td>
                    <td class="d-flex">
                        <a href="{{ path('admin.option.edit', { id: option.id }) }}" class="btn btn-secondary me-2">Editer</a>
                        <form method='post' action="{{ path('admin.option.delete', { id: option.id }) }}" 
                        onsubmit="return confirm('Voulez vous vraiment supprimer l\'article ?')">
                            <input type="hidden" name="_method" value='DELETE'>
                            <input type="hidden" name="_token" value='{{ csrf_token('delete' ~ option.id) }}'>
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-end">
            <a class='btn btn-primary' href="{{ path('admin.option.new') }}">Créer un nouveau bien</a>
        </div>
    </div>
{% endblock %}
