{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="container">
        {% if error %}
            <div class="alert alert-danger mt-4">
                {{ error.messageKey| trans(error.messagedata, 'security') }}
            </div>
        {% endif %}
        <form action="{{ path('login') }}" class="mt-4" method="post">
            <div class="form-group my-2">
                <label for="email" class="my-2">Email</label>
                <input type="text" id="email" name="_username" class="form-control" value="{{ lastUsername }}">
            </div>
            <div class="form-group my-2">
                <label for="password" class="my-2">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary my-2">Se connecter</button>
        </form>
    </div>
{% endblock %}
